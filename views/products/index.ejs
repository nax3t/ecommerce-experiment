<% layout("layouts/boilerplate") -%>

<!--Flash messages-->
<% if(error && error.length > 0){ %>
<div id="flash" class="alert alert-danger" role="alert">
    <%= error %>
</div>
<% } %>
<% if(success && success.length > 0){ %>
<div id="flash" class="alert alert-success" role="alert">
    <%= success %>
</div>
<% } %>


<% products.forEach(function(product) { %>
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <a href="/products/<%= product.id %>">
                <img class="img-responsive" src="<%= product.imagePath %>" alt="<%= product.title %>"></a>
            <div class="caption">
                <h4><%= product.title %></h4>
                <p class="description"><%= product.formattedDate %></p>
                <div class="clearfix">
                    <div class="price pull-left">from $<%= product.basePrice %></div>
                    <a href="/add-to-cart/<%= product.id %>" class="btn btn-success pull-right" role="button"><i class="fa fa-cart-plus"
                                                                                    aria-hidden="true"></i> Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
</div>