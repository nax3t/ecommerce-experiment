<% layout("layouts/boilerplate") -%>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Edit Category: <%= category.title %></h1>

        <form action="/categories/<%= category._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title" value="<%= category.title %>" required>
            </div>
            <div class="form-group">
                <label for="password">Image</label>
                <input class="form-control" type="text" id="imagePath" name="imagePath" value="<%= category.imagePath %>" required>
            </div>

            <button type="submit" class="btn btn-primary">Update Category</button>
        </form>

        <hr>

        <form action="/categories/<%= category._id %>?_method=DELETE" method="POST">
            <button class="btn btn-xs btn-danger">Delete Category</button>
        </form>

    </div>
</div>